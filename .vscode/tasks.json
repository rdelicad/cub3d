{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc compilar archivo activo",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g", "-Wall", "-Wextra", "-Werror",
                "../src/*.c",
                "../MLX42/libmlx42.a",
                "-I/include",
                "-lglfw",
                "-L/Users/rdelicad/.brew/opt/glfw/lib/",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Tarea generada por el depurador."
        }
    ],
    "version": "2.0.0"
}
